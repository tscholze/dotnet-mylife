<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MyLife.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:MyLife.Maui.Pages"
    xmlns:local="clr-namespace:MyLife.Maui"
    Shell.FlyoutBehavior="Disabled"
    Title="MyLife.Maui">

    <TabBar>
        <ShellContent
            Icon="tab_home.png"
            Title="Welcome"
            ContentTemplate="{DataTemplate pages:WelcomePage}"
            Route="WelcomePage"/>
        
        <ShellContent
            Icon="tab_articles.png"
            Title="Open Source"
            ContentTemplate="{DataTemplate pages:OpenSourcePage}"
            Route="WelcomePage"/>
    </TabBar>

</Shell>
